{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["ES2015"],
      "allowJs": false,
      "outDir": "./dist",
      "strict": true ,
      "noImplicitAny": true,
      "strictPropertyInitialization": false, 
      "noUnusedLocals": true ,
      "declaration": true,
      "moduleResolution": "node" ,
      "esModuleInterop": true,
      "declarationMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "composite": true
    },
    "include": ["./"],
  }
  